<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


<Button
    android:id="@+id/mi_two1_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="我是谁？" />

<EditText
    android:id="@+id/mi_two2_et"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:hint="M"
    android:layout_marginTop="46dp"
    android:layout_below="@+id/mi_two4_btn"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<EditText
    android:id="@+id/mi_two3_et"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:hint="O"
    android:layout_alignTop="@+id/mi_two2_et"
    android:layout_toRightOf="@+id/mi_two4_btn"
    android:layout_toEndOf="@+id/mi_two4_btn" />

<Button
    android:id="@+id/mi_two4_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="确定！"
    android:layout_below="@+id/mi_two1_btn"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="52dp" />

    <Button
        android:id="@+id/mi_two5_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的城市"
        android:layout_below="@+id/mi_two1_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>